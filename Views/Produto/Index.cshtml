@model IEnumerable<ProjetoFinal.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de produto</h1>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdEstoque)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.TipoProduto.TipoProdutoDescricao)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor.NomeFornecedor)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-editar">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-detalhes">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
