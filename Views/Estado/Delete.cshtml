<div class="container-delete">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoNome)
