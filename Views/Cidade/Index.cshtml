@model IEnumerable<ProjetoFinal.Models.Cidade>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de Cidade</h1>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CidadeNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CidadeNome)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Estado.EstadoNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-editar">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-detalhes">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
